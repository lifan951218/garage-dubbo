<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context
      	http://www.springframework.org/schema/context/spring-context.xsd
        ">

	<!-- 为当前服务提供者取个名字，并且提供给注册中心 -->
	<dubbo:application name="dubbo-order-service"></dubbo:application>

	<!-- 注册中心的配置，使用zk暴露服务 -->
	<dubbo:registry protocol="zookeeper" address="192.168.43.131:2181"></dubbo:registry>

	<!-- 定义暴露服务的端口号 -->
	<dubbo:protocol name="dubbo" port="20882"></dubbo:protocol>

	<!-- 暴露具体的服务接口 -->
	<dubbo:service retries="3" interface="com.lifan.order.service.OrderService"
				   ref="orderService"></dubbo:service>

	<dubbo:service retries="3" interface="com.lifan.order.service.ParkingService"
				   ref="parkingService"></dubbo:service>

	<!--<context:component-scan base-package="com.lifan.garage"/>-->

	<!--<dubbo:annotation package="com.lifan.garage.service" />-->

	<!-- 和本地 bean 一样实现服务 -->
	<!--<bean id="garageInfoService" class="com.lifan.garage.service.GarageInfoServiceImpl" />-->

		
</beans>
